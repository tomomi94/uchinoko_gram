<%# ヘッダー %>
<%= render "shared/header" %>

<div class='main'>

  <%# 画面上部の帯部分 %>
  <%= image_tag "top_header.jpg", class:"top-image" %>

  <%# 新着投稿 %>
  <div class='tweet-contents'>
    <h2 class='title'>新着投稿</h2>
    <ul class='tweet-lists'>

      <% @tweets.each do |tweet| %>
      <li class='list'>
        <%= link_to tweet_path(tweet.id) do %>
        <div class='tweet-img-content'>
          <%= image_tag tweet.image, class: "tweet-img" %>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>

  <%# 投稿ボタン %>
  <% if user_signed_in? %>
    <%= link_to(new_tweet_path, class: 'tweet-btn') do %>
      <span class='tweet-btn-text'>投稿する</span>
      <%= image_tag 'ashiato.png', class: "tweet-btn-icon" %>
    <% end %>
  <% end %>
</div>

<%# フッター %>
<%= render "shared/footer" %>