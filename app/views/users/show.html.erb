<%# ヘッダー %>
<%= render "shared/header" %>

<div class='main'>

<%# 投稿した画像一覧 %>
  <div class='tweet-contents'>
    <h2 class='title'>
      <%= @accountname %>さんの投稿一覧
    </h2>
    <ul class='tweet-lists'>
      <% @tweets.each do |tweet| %>
      <li class='list'>
        <%= link_to tweet_path(tweet.id) do %>
        <div class='tweet-img-content'>
          <%= image_tag tweet.image, class: "tweet-img" %>
          <% end %>
        </div>
      
      <%= render partial: 'shared/like',  locals: { tweet: tweet} %>

      <% end %>
    </ul>
  </div>

  <%# 投稿ボタン %>
  <%= link_to(new_tweet_path, class: 'tweet-btn') do %>
    <span class='tweet-btn-text'>投稿する</span>
    <%= image_tag 'ashiato.png' , size: '60x60' ,class: "tweet-btn-icon" %>
  <% end %>

</div>

<%# フッター %>
<%= render "shared/footer" %>